# 第一阶段：构建Go应用
FROM golang:1.22-alpine AS builder

# 设置工作目录
WORKDIR /app

# 安装必要的工具
RUN apk add --no-cache git

# 复制go mod文件
COPY go.mod go.sum ./

# 下载依赖
RUN go mod download

# 复制源代码
COPY . .

# 构建应用
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o learning-stack-backend ./cmd/learning-stack-backend

# 第二阶段：运行时镜像
FROM alpine:latest

# 安装ca-certificates（用于HTTPS请求）
RUN apk --no-cache add ca-certificates

WORKDIR /root/

# 从构建阶段复制二进制文件
COPY --from=builder /app/learning-stack-backend .

# 复制配置文件（如果存在）
COPY --from=builder /app/.env* ./

# 暴露端口
EXPOSE 8080

# 运行应用
CMD ["./learning-stack-backend"] 